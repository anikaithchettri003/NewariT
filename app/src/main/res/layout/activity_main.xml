<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/subtitle"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/indigo_daisy"
        android:text="@string/app_name"
        android:textColor="#0F3460"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Name_In"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/indigo_daisy"
        android:text="@string/welcome_newari_t"
        android:textColor="#0F3460"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Name_In"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/Country_In"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:autofillHints=""
        android:background="@drawable/et_custom"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/name"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="#546E7A"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/Country_In"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/Email_In"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/et_custom"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/country"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="#546E7A"
        android:textSize="15sp"
        android:autofillHints="" />

    <EditText
        android:id="@+id/Email_In"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/et_custom"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/e_mail"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textColorHint="#546E7A"
        android:textSize="15sp"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Email_In"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_custom"
        android:fontFamily="@font/roboto_regular"
        android:onClick="reg"
        android:text="@string/register"
        android:textColor="@android:color/white" />



</RelativeLayout>